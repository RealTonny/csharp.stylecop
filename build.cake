var target = Argument("target", "Pack");
var project = "csharp.stylecop";
var release = ParseReleaseNotes("RELEASE_NOTES.md");

//////////////////////////////////////////////////////////////////////
// TASKS
//////////////////////////////////////////////////////////////////////

Task("Pack")
    .Does(() =>
{
    StartProcess(".paket/paket.exe", $"pack --version {release.SemVersion.ToString()} artifacts");
});

//////////////////////////////////////////////////////////////////////
// EXECUTION
//////////////////////////////////////////////////////////////////////

RunTarget(target);